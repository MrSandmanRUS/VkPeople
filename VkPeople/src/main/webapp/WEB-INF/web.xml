<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>friendPairs</servlet-name>
        <servlet-class>org.schematch_team.parsing.FriendPairsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>friendPairs</servlet-name>
        <url-pattern>/getFriendPairs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>application</servlet-name>
        <jsp-file>/resources/application.html</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>application</servlet-name>
        <url-pattern>/graph</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>smokers</servlet-name>
        <jsp-file>/resources/smokers.html</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>smokers</servlet-name>
        <url-pattern>/smokers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>institutes</servlet-name>
        <jsp-file>/resources/institutes.html</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>institutes</servlet-name>
        <url-pattern>/institutes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>geography</servlet-name>
        <jsp-file>/resources/geography.html</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>geography</servlet-name>
        <url-pattern>/geography</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>drunk</servlet-name>
        <jsp-file>/resources/drunk.html</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>drunk</servlet-name>
        <url-pattern>/drunk</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
</web-app>